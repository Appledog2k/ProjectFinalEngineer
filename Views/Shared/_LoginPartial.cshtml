@using Microsoft.AspNetCore.Identity
@using ProjectFinalEngineer.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))

































































































































{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm"
    class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage"
                style="color: black; font-size:20px">Xin chào @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link text-dark"
                style="color: black; font-size:20px">Đăng xuất</button>
            </li>
        </ul>
    </form>















}































































































































else































































































































{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Register"
            style="color: black; font-size:20px">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Login"
            style="color: black; font-size:20px">Đăng nhập</a>
        </li>
    </ul>































































































































}