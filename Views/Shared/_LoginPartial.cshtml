@using Microsoft.AspNetCore.Identity
@using App.Models
@using ProjectFinalEngineer.Models.AggregateUser;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        <ul>
            <li>
                <a asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage">
                <i class="far fa-user"></i>
                @UserManager.GetUserName(User)</a>
            </li>
            <li >
                <button type="submit">
                    Đăng xuất
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <i class="fas fa-sign-in-alt"></i>
    <a class="user" asp-controller="Account" asp-action="Login">
        Đăng nhập
    </a>
}