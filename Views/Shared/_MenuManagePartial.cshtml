@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService
@{
    var result = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}
@if (result.Succeeded)
{
    <div class="dropdown show">
        <a class="btn btn-outline-danger dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Trang quản lý
        </a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" asp-action="Index" asp-controller="DbManage" asp-area="Database">
