@model ProjectFinalEngineer.Models.RoomingHouse.Area

@{
    ViewData["Title"] = "Tạo khu vực nhà trọ";
    //var list = ViewData["categories"] as MultiSelectList;
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Post/create.css">
</head>


<section class="db-main">
    <div class="db-main-header">
        <header>
            <h3>Tạo mới miền kiến thức</h3>
            <p>Tạo mới miền kiến thức sử dụng cho bài viết hoặc kiến thức</p>
        </header>
    </div>
    <div>
        <article class="db">
            <div class="main-info">
                <div class="card-info">
                    <form id="profile-form" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ParentAreaId" class="control-label"></label>
                            <select asp-for="ParentAreaId" class="form-control" asp-items="ViewBag.ParentAreaId"></select>
                        </div>

                        <div class="form-group select-option">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control-user" style="margin-left: 0 !important;" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
       
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Tạo khu vực" class="btn btn-primary" />
                            <a asp-action="Index" style="color: white!important;">Danh sách khu vực</a>
                        </div>
                    </form>
                </div>
            </div>
        </article>
    </div>
</section>

@section Scripts {
    <script src="~/js/Post/Create.js"></script>
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

    <script>
        $("#CategoryIDs").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false
        });
        $('#your-modal-id').modal('hide');
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();

    </script>

    <partial name="_ValidationScriptsPartial" />
}


@{
    var summernote = new ProjectFinalEngineer.Models.AggregateSummernote.Summernote("#Description")
            {
                Height = 100
            };
}
<partial name="_Summernote" model="summernote" />