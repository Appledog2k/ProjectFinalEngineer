@using ProjectFinalEngineer.Models.AggregateUser;

@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu ?";
    Layout = null;
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Account/forgotpassword.css">
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/Images/logo/favicon.ico">
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                @*Form đăng nhập tài khoản*@
                <div class="signin">
                    <div class="signin-table">
                        <section class="signin-section">
                            <form method="post" class="sign-in-form">
                                <h2 class="title">Lấy mật khẩu</h2>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                @*Nhập tên tài khoản hoặc địa chỉ thư điện tử*@
                                <div class="input-field">
                                    <i class="fas fa-envelope"></i>
                                    <div class="input-fields">
                                        <input type="text" placeholder="Nhập vào địa chỉ thư điện tử" asp-for="Email" />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="btn-login">
                                    <button type="submit" class="btn">Gửi yêu cầu</button>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Quên mật khẩu ?</h3>
                    <p>
                        Vui lòng nhập địa chỉ thư điện tử đã đăng kí tài khoản của diễn đàn tại màn hình phía bên tay phải để được hỗ trợ lấy lại mật khẩu.
                    </p>
                    <div>
                        <button class="btn-register-action">
                            <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Quay lại đăng nhập</a>
                        </button>
                    </div>

                    @*<form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">

                    </form>*@
                </div>
                <img src="~/Images/ImageLogin/undraw_forgot_password_re_hxwm.svg" class="image" alt="" />
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

