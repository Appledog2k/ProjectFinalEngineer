@using ProjectFinalEngineer.Models.AggregateUser;

@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<head>
    <link rel="stylesheet" href="~/css/Manage/ChangePassword.css">
</head>

<section class="db-main">
    <div class="db-main-header">
        <header>
            <h3>Đặt lại mật khẩu</h3>
            <p>Vui lòng nhập các trường thông tin cần thiết để đặt lại mật khẩu</p>
        </header>
    </div>
    <div>
        <article class="db">
            <div class="db-article">
                <div class="db-article-line">
                    <div class="main-info">
                        <h2>Nhập thông tin để đổi mật khẩu</h2>
                        <div class="card-info">
                            <div class="card-body-info">
                                <form id="profile-form" asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input asp-for="@Model.Code" type="hidden" />
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control-passcurrent" style="margin-left: 100px;" />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control-passcurrentnew" style="margin-left: 10px;" />
                                        <span asp-validation-for="Password"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword"></label>
                                        <input asp-for="ConfirmPassword" class="form-control-passcurrentnew-cf" style="margin-left: 35px;" />
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                    <button id="update-profile-button" type="submit">Đặt lại</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <img class="db-image" src="~/images/avatars/undraw_authentication_re_svpt.svg"
                     style="width: 252px; bottom: -1px; right: 15px;">
            </div>
        </article>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
