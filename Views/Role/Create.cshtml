@using ProjectFinalEngineer.Models.AggregateRole;
@model CreateRoleModel
@{
    ViewData["Title"] = "Tạo vai trò";
}

<head>
    <link rel="stylesheet" href="~/css/Role/create.css">
</head>

<section class="role-main">
    <div>
        <partial name="_AlertMessage"></partial>
    </div>
    <div class="role-main-header">
        <header>
            <h3>Tạo vai trò mới</h3>
            <p>Tạo vai trò mới trên hệ thống của diễn đàn</p>
        </header>
    </div>
    <div>
        <article class="role">
            <div class="role-article">
                <div class="role-article-line">
                    <h1>Vai trò</h1>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Tên vai trò:</label>
                            <input asp-for="Name" class="form-control" placeholder="Vui lòng nhập tên vai trò"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group-action">
                            <input type="submit" value="Tạo mới" />
                            <a  asp-action="Index">Danh sách các vai trò</a>
                        </div>
                    </form>
                </div>
            </div>
            <img class="role-image" src="~/images/avatars/object-oriented-principles-in-php.svg"
                 style="width: 310px;">
        </article>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
