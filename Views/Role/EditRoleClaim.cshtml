@using ProjectFinalEngineer.Models.AggregateRole;
@model EditClaimModel
@{
    ViewData["Title"] = "Gán đặc tính cho role";
}

<head>
    <link rel="stylesheet" href="~/css/Role/editroleclaim.css">
</head>

<section class="role-main">
    <div>
        <partial name="_AlertMessage"></partial>
    </div>
    <div class="role-main-header">
        <header>
            <h3>Cập nhật quyền</h3>
            <p>Cập nhật quyền cho vai trò @Model.role.Name.ToLower() trên hệ thống diễn đàn</p>
        </header>
    </div>
    <div>
        <article class="role">
            <div class="role-article">
                <div class="role-article-line">
                    <h1>@Model.role.Name</h1>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ClaimType" class="control-label">Tên quyền :</label>
                            <input asp-for="ClaimType" class="form-control1" />
                            <span asp-validation-for="ClaimValue" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ClaimValue" class="control-label">Giá trị : </label>
                            <input asp-for="ClaimValue" class="form-control2" />
                            <span asp-validation-for="ClaimValue" class="text-danger"></span>
                        </div>
                        <div class="form-group-action">
                            <div class="action-input">
                                <input type="submit" value="Cập nhật quyền" class="btn btn-primary" />
                                <input type="submit" asp-action="DeleteClaim" asp-route-claimid="@ViewBag.claimid" value="Xóa quyền" />
                            </div>

                            <a class="btn btn-primary" asp-action="Edit" asp-route-roleid="@Model.role.Id">Quay lại trang cập nhật vai trò</a>
                        </div>
                    </form>
                </div>
            </div>
            <img class="role-image" src="~/images/avatars/object-oriented-principles-in-php.svg"
                 style="width: 310px;">
        </article>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

