@model ProjectFinalEngineer.Models.AggregatePost.CreatePostModel

@{
    ViewData["Title"] = "Cập nhật bài viết";
    var list = ViewData["categories"] as MultiSelectList;
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
    <link rel="stylesheet" href="~/css/Post/create.css">
}

<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Post/create.css">
    <script src="~/js/Post/Create.js"></script>

</head>
<section class="db-main">
    <div class="db-main-header">
        <header>
            <h3>Cập nhật bài viết</h3>
            <p>Nếu có sai sót hoặc chỉnh sửa dữ liệu bài viết hãy cập nhật bài viết</p>
        </header>
    </div>
    <div>
        <article class="db">
            <div class="db-article">
                <div class="db-article-line">
                    <div class="main-info">
                        <div class="card-info">
                            <form id="profile-form" asp-action="Update">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <input type="hidden" asp-for="PostId" />
                                    <div class="form-group select-option">
                                        <label asp-for="CategoryIDs"></label>
                                        <select asp-for="CategoryIDs" multiple="multiple" asp-items="list" style="width: 300px !important; height: 50px !important; color: black !important"></select>
                                        <span asp-validation-for="CategoryIDs" class="text-danger"></span>
                                    </div>
                                    <div class="form-group select-option">
                                        <label asp-for="Title"></label>
                                        <input asp-for="Title" class="form-control-user" style="margin-left: 0 !important;" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group media-none">
                                        <label asp-for="Media"></label>
                                        <textarea asp-for="Media" class="form-control"></textarea>
                                        <span asp-validation-for="Media" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Content"></label>
                                        <textarea asp-for="Content" class="form-control"></textarea>
                                        <span asp-validation-for="Content" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                        <a asp-action="Index" style="color: white!important;">Danh sách bài viết</a>
                                    </div>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>

@section Scripts {

    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

    <script>
        $("#CategoryIDs").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false
        });
        $('#your-modal-id').modal('hide');
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();

    </script>

    <partial name="_ValidationScriptsPartial" />
}


@{
    var summernote = new ProjectFinalEngineer.Models.AggregateSummernote.Summernote("#Content")
            {
                Height = 100
            };
    var summernoteMedia = new ProjectFinalEngineer.Models.AggregateSummernote.Summernote("#Media")
            {
                Height = 0,
                Toolbar = @"[['insert', ['picture', 'video']],
                        ['view', ['fullscreen', 'codeview', 'help']],]",
            };
}
<partial name="_Summernote" model="summernote" />
<partial name="_Summernote" model="summernoteMedia" />

