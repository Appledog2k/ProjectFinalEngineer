@model IEnumerable<ProjectFinalEngineer.Models.AggregatePost.Post>

@{
    ViewData["Title"] = "Diễn đàn";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Post/index.css">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&family=Roboto:wght@300;400;500;700;900&display=swap"
          rel="stylesheet">
</head>
<body>
    <div id="forum">
        <div class="container">
            <div id="forum-wapper">
                <aside>
                    <div class="forum-left">
                        <button>
                            <a asp-action="Create">Tạo bài viết mới</a>
                        </button>
                        <ul class="forum-ul">
                            <li>
                                <a href="###">
                                    <span></span>
                                    Tất cả chủ đề
                                </a>
                            </li>
                            <li>
                                <a href="###">
                                    <span></span>
                                    Phổ biến
                                </a>
                            </li>
                            <li>
                                <a href="###">
                                    <span></span>
                                    Phổ biến trong tuần
                                </a>
                            </li>
                            <li>
                                <a href="###">
                                    <span></span>
                                    Kiến thức
                                </a>
                            </li>
                            <li>
                                <a href="###">
                                    <span></span>
                                    Giải đáp
                                </a>
                            </li>
                            <li>
                                <a href="###">
                                    <span></span>
                                    Trao đổi, mua bán
                                </a>
                            </li>
                        </ul>
                    </div>
                </aside>
                <div id="forum-main">
                    <div class="fm-text">
                        <div class="fm-head">
                            <div class="fm-filter">
                                <div class="ft-1">
                                    <div class="select-wrap">
                                        <select>
                                            <option>Mới</option>
                                            <option>Phổ biến</option>
                                            <option>Thảo luận</option>
                                            <option>Giải pháp</option>
                                        </select>
                                        <svg width="20" height="16" class="fill-current text-grey-600" viewBox="0 0 10 16">
                                            <path d="M5 11L0 6l1.5-1.5L5 8.25 8.5 4.5 10 6z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <div class="ft-2">
                                    <div class="select-wrap">
                                        <select>
                                            <option>Mới nhất</option>
                                            <option>Mã nguồn mở</option>
                                            <option>Mã nguồn mở</option>
                                            <option>Cần thảo luận</option>
                                            <option>Cần trao đổi</option>
                                        </select>
                                        <svg width="20" height="16" class="fill-current text-grey-600" viewBox="0 0 10 16">
                                            <path d="M5 11L0 6l1.5-1.5L5 8.25 8.5 4.5 10 6z"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            <form class="fm-search" autocomplete="off">
                                <label class="fm-s-lb">
                                    <div class="search-icon">
                                        <div class="search">
                                            <div class="search_circle"></div>
                                            <div class="search_rectangle"> </div>
                                        </div>
                                    </div>
                                    <input class="fm-s-input" placeholder="Tìm kiếm" />
                                </label>
                            </form>
                        </div>
                        <div>
                            <div class="table">
                                @foreach (var item in Model)
                                {
                                    <div class="contact-element">
                                        <div class="contact-element-avatar">
                                            <img class="ct-image" src="~/images/avatars/default-avatar-23.webp">
                                        </div>
                                        <div class="contact-element-content">
                                            <div>
                                                <div class="ct-header">
                                                    <h4>
                                                        <a asp-action="Details" asp-route-id="@item.PostId">
                                                            @Html.DisplayFor(modelItem => item.Title)
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div class="ct-body">
                                                    <div class="ct-body-name">
                                                        <p>@Html.DisplayFor(modelItem => item.Author.UserName),</p>
                                                    </div>
                                                    <div class="ct-body-time">
                                                        <p>
                                                            &nbsp;tạo liên hệ vào @Html.DisplayFor(modelItem => item.DateUpdated.Day)/@Html.DisplayFor(modelItem => item.DateUpdated.Month)/@Html.DisplayFor(modelItem => item.DateUpdated.Year)
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <partial name="_PagingXTL" model="@ViewBag.pagingModel" />
                        </div>
                    </div>
                </div>
                <aside>
                    <div class="forum-left">
                        <div class="container-ex">
                            <div class="wt-title"><p>Thời tiết</p></div>
                            <div class="search-box">
                                <i class="fa-solid fa-location-dot"></i>
                                <input type="text" placeholder="Vị trí của bạn">
                                <button class="wt-btn"><i class="fas fa-search"></i></button>
                            </div>
                            <div class="not-found">
                                <img src="~/images/avatars/404.png">
                                <p>Oops! Invalid location :/</p>
                            </div>

                            <div class="weather-box">
                                <img src="">
                                <p class="temperature"></p>
                                <p class="description"></p>
                            </div>

                            <div class="weather-details">
                                <div class="humidity">
                                    <i class="fa-solid fa-water"></i>
                                    <div class="text">
                                        <span></span>
                                        <p>Humidity</p>
                                    </div>
                                </div>
                                <div class="wind">
                                    <i class="fa-solid fa-wind"></i>
                                    <div class="text">
                                        <span></span>
                                        <p>Wind Speed</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/7c8801c017.js" crossorigin="anonymous"></script>
    <script src="~/js/Post/Post.js"></script>
</body>
