@model ProjectFinalEngineer.Models.RoomingHouse.CreateRoomingHouseModel

@{
    ViewData["Title"] = "Thêm kiến thức";
    var list = ViewData["areas"] as MultiSelectList;
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
    <link rel="stylesheet" href="~/css/Post/create.css">
}
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Post/create.css">
</head>
<section class="db-main">
    <div class="db-main-header">
        <header>
            <h3>Bài đăng nhà trọ</h3>
            <p>Nhập các trường đúng thông tin giúp bạn giải quyết vấn đề một cách nhanh chóng.</p>
        </header>
    </div>
    <div>
        <article class="db">
            <div class="main-info">
                <div class="card-info">
                    <form id="profile-form" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group select-option">
                            <label asp-for="AreaIDs"></label>
                            <select asp-for="AreaIDs" multiple="multiple" asp-items="list" style="width: 300px !important; height: 50px !important; color: black !important"></select>
                            <span asp-validation-for="AreaIDs" class="text-danger"></span>
                        </div>

                        <div class="form-group select-option">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control-user" style="margin-left: 0 !important;" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group select-option">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control-user" style="margin-left: 0 !important;" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Price" ></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        
                        
                        <div class="form-group">
                            <label asp-for="Image" ></label>
                            <textarea asp-for="Image" class="form-control"></textarea>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Content" ></label>
                            <textarea asp-for="Content" class="form-control"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Tạo bài viết" class="btn btn-primary" />
                            <a asp-action="Index" style="color: white!important;">Danh sách bài viết</a>
                        </div>
                    </form>
                </div>
            </div>
        </article>
    </div>
</section>



@section Scripts {

    <script src="~/js/Post/Create.js"></script>
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

    <script>
        $("#AreaIDs").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}


@{
    var summernote = new ProjectFinalEngineer.Models.AggregateSummernote.Summernote("#Content") {
        Height = 100
    };
    var summernoteMedia = new ProjectFinalEngineer.Models.AggregateSummernote.Summernote("#Image")
    {
        Height = 0,
        Toolbar = @"[['insert', ['picture', 'video']],
        ['view', ['fullscreen', 'codeview', 'help']],]",
    };
}
<partial name="_Summernote" model="summernote" />
<partial name="_Summernote" model="summernoteMedia" />












